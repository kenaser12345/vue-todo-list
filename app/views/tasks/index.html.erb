<h1>任務列表</h1>
<%= link_to "登出", logout_path, method: 'delete'%>
<table class="table table-striped">
  <thead>
    <td>任務名稱</td>
    <td>任務描述</td>
  </thead>
  <tbody>
    <% @tasks.each do |task|%>
      <tr>
        <td>
          <%= task.name %>
        </td>
        <td>
          <%= task.description %>
        </td>
        <td>
          <%= link_to '修改', edit_task_path(task) %>
        </td>
        <td>
          <%= link_to '刪除', task_path(task), method: 'delete' %>
        </td>
        <td>
          <%= link_to 'Show', task_path(task) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "新增", new_task_path %>